@{
    ViewData["Title"] = "Bowlers";
}

@model List<Bowler>

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>ID</td>
            <td>Last Name</td>
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
        </tr>
    </thead>

    <tbody>
        @foreach (Bowler b in Model)
            {
                <tr>
                    <td>@b.BowlerID</td>
                    <td>@b.BowlerLastName</td>
                    <td>@b.BowlerFirstName</td>
                    <td>@b.BowlerMiddleInit</td>
                    <td>@b.BowlerAddress</td>
                    <td>@b.BowlerCity</td>
                    <td>@b.BowlerState</td>
                    <td>@b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>

                    <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID" asp-route-teamid="@b.TeamID">Edit</a></td>
                    <td><a class="text-danger" asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID" asp-route-teamid="@b.TeamID">Delete</a></td>
                </tr>
            }

    </tbody>

</table>
